<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-4.1.xsd">

	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/login_security.do" access="permitAll" />
		<intercept-url pattern="/main.do" access="permitAll" />
		<intercept-url pattern="/user/userRegist.do" access="permitAll" />
		<intercept-url pattern="/user/registUser.do" access="permitAll" />
		<intercept-url pattern="/css/**" access="permitAll" />
		<intercept-url pattern="/fonts/**" access="permitAll" />
		<intercept-url pattern="/img/**" access="permitAll" />
		<intercept-url pattern="/js/**" access="permitAll" />
		<intercept-url pattern="/**" access="hasRole('ROLE_USER')" />

		<form-login 
			login-page="/main.do"
			default-target-url="/main.do" 
			username-parameter="loginId"
			password-parameter="password"
			login-processing-url="/login-security.do" 
			authentication-failure-url="/login_security.do?fail"
			always-use-default-target="true" />

		<logout invalidate-session="true" 
				logout-url="/logout.do"
				logout-success-url="/login_security?logout" />

		<!-- enable csrf protection -->
		<csrf />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="memberService"></authentication-provider>
	</authentication-manager>

	<beans:bean id="memberService" class="hotdog.commons.auth.MemberService"></beans:bean>

</beans:beans>
